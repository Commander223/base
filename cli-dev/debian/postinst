#!/bin/sh
# postinst script for subutai-cli
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# TODO: add complete -F _subutai-dev subutai line to end of subuta-cli.bash_completion script to enable 
#       subutai-cli-dev bindings scritps.
# sed -i '/complete -F _subutai-dev subutai/d' Desktop/a 
# echo "complete -F _subutai-dev subutai" >> Desktop/a 


case "$1" in
    configure)
	# Add symlinks of subutai-cli-dev bindings under subutai bindings directory
	ln -sf /usr/share/subutai-cli-dev/bindings/* /etc/subutai/bindings/
    # invoke _subutai-dev function with complete command
    echo "complete -F _subutai-dev subutai" >> /etc/bash_completion.d/subutai-cli.bash_completion
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        # call subutai bash completion script
        . /etc/bash_completion.d/subutai-cli-dev.bash_completion
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
