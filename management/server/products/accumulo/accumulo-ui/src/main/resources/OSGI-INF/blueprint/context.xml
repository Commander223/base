<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <service ref="module" interface="org.safehaus.subutai.server.ui.services.Module" />

  <reference id="accumuloManager" availability="mandatory"
             interface="org.safehaus.subutai.api.accumulo.Accumulo" />
  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.api.agentmanager.AgentManager" />
  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.api.tracker.Tracker" />
  <reference id="hadoopManager" availability="mandatory"
             interface="org.safehaus.subutai.api.hadoop.Hadoop" />
  <reference id="zookeeperManager" availability="mandatory"
             interface="org.safehaus.kiskis.mgmt.api.zookeeper.Zookeeper" />

  <bean id="module" scope="singleton" class="org.safehaus.subutai.ui.accumulo.AccumuloUI"
        init-method="init" destroy-method="destroy">
    <argument ref="agentManager" />
    <argument ref="tracker" />
    <argument ref="accumuloManager" />
    <argument ref="hadoopManager" />
    <argument ref="zookeeperManager" />
  </bean>

</blueprint>
