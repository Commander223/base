<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

    <reference id="accumuloManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.accumulo.Accumulo"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="accumulo/list-clusters">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.ListClustersCommand">
                <property name="accumuloManager" ref="accumuloManager"/>
            </action>
        </command>
    </command-bundle>


</blueprint>
