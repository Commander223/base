<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
            http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
            http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.api.agentmanager.AgentManager" />

  <reference id="elasticsearch" availability="mandatory"
             interface="org.safehaus.subutai.api.elasticsearch.Elasticsearch" />

  <bean id="restService" class="org.safehaus.subutai.elasticsearch.rest.RestService">
    <property name="agentManager" ref="agentManager" />
    <property name="elasticsearch" ref="elasticsearch" />
  </bean>

  <jaxrs:server address="/elasticsearch" id="elasticsearchRestService">
    <jaxrs:serviceBeans>
      <ref component-id="restService" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
