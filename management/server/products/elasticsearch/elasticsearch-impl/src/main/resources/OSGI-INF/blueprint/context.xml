<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="commandRunner" availability="mandatory"
             interface="org.safehaus.subutai.api.commandrunner.CommandRunner"/>

  <bean id="elasticsearch-impl" scope="singleton"
      class="org.safehaus.subutai.impl.elasticsearch.ElasticSearchImpl">
    <argument ref="commandRunner"/>
  </bean>

  <service ref="elasticsearch-impl" interface="org.safehaus.subutai.api.elasticsearch.ElasticSearch"/>

</blueprint>
