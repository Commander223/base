<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="elasticsearch" availability="mandatory"
             interface="org.safehaus.subutai.api.elasticsearch.Elasticsearch"/>

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.api.agentmanager.AgentManager"/>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
      <command name="elasticsearch:config">
          <action class="org.safehaus.subutai.cli.elasticsearch.ConfigCommand">
              <property name="elasticsearch" ref="elasticsearch"/>
              <property name="agentManager" ref="agentManager"/>
          </action>
      </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
      <command name="elasticsearch:execute">
          <action class="org.safehaus.subutai.cli.elasticsearch.ExecuteCommand">
              <property name="elasticsearch" ref="elasticsearch"/>
              <property name="agentManager" ref="agentManager"/>
          </action>
      </command>
  </command-bundle>

</blueprint>
