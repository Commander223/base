<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <service ref="module" interface="org.safehaus.kiskis.mgmt.server.ui.services.Module"/>

    <reference id="solrManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.solr.Solr"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.api.agentmanager.AgentManager"/>
    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.tracker.Tracker"/>

    <bean id="module" scope="singleton" class="org.safehaus.kiskis.mgmt.ui.solr.SolrUI"
          init-method="init" destroy-method="destroy">
        <argument ref="agentManager"/>
        <argument ref="tracker"/>
        <argument ref="solrManager"/>
    </bean>


</blueprint>
