<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <reference id="solrManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.solr.Solr"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="solr/list-clusters">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.ListClustersCommand">
                <property name="solrManager" ref="solrManager"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
