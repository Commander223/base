<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    
    <reference id="mongoManager" availability="mandatory"
               interface="org.safehaus.subutai.api.mongodb.Mongo"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.api.agentmanager.AgentManager"/>
    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.subutai.api.tracker.Tracker"/>
        
    <bean id="module" scope="singleton" class="org.safehaus.subutai.ui.mongodb.MongoUI"
          init-method="init" destroy-method="destroy">
        <argument ref="agentManager" />
        <argument ref="mongoManager"/>
        <argument ref="tracker"/>
    </bean>
    
    <service ref="module" interface="org.safehaus.subutai.server.ui.services.Module"/>
    
</blueprint>
