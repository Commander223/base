<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    
    <reference id="taskRunner" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.taskrunner.TaskRunner"/>    
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.agentmanager.AgentManager"/>    
    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.tracker.Tracker"/>    
    <reference id="dbManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.dbmanager.DbManager"/> 
    <reference id="lxcManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.lxcmanager.LxcManager"/>          
    
    <bean id="oozie-impl" scope="singleton" class="org.safehaus.kiskis.mgmt.impl.oozie.OozieImpl"
          init-method="init" destroy-method="destroy">
        <property name="taskRunner" ref="taskRunner"/>
        <property name="agentManager" ref="agentManager"/>
        <property name="tracker" ref="tracker" />
        <property name="dbManager" ref="dbManager" />
        <property name="lxcManager" ref="lxcManager"/>
    </bean>    
       
    <service ref="oozie-impl" interface="org.safehaus.kiskis.mgmt.api.oozie.Oozie"/>
    
</blueprint>
