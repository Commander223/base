<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.api.tracker.Tracker" />

  <reference id="dbManager" availability="mandatory"
             interface="org.safehaus.subutai.api.dbmanager.DbManager" />

  <reference id="lxcManager" availability="mandatory"
             interface="org.safehaus.subutai.api.lxcmanager.LxcManager" />

  <reference id="networkManager" availability="mandatory"
             interface="org.safehaus.subutai.api.networkmanager.NetworkManager" />

  <reference id="commandRunner" availability="mandatory"
             interface="org.safehaus.subutai.api.commandrunner.CommandRunner" />

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.api.agentmanager.AgentManager" />

  <reference id="configManager" availability="mandatory"
             interface="org.safehaus.subutai.configuration.manager.api.ConfigManager"/>

  <bean id="elasticsearch2-impl" scope="singleton" class="org.safehaus.subutai.impl.elasticsearch2.ElasticsearchImpl"
        init-method="init" destroy-method="destroy">
    <property name="tracker" ref="tracker" />
    <property name="dbManager" ref="dbManager" />
    <property name="lxcManager" ref="lxcManager" />
    <property name="networkManager" ref="networkManager" />
    <property name="commandRunner" ref="commandRunner" />
    <property name="agentManager" ref="agentManager" />
  </bean>

  <bean id="elasticsearch2-configuration-logic" scope="singleton"
        class="org.safehaus.subutai.impl.elasticsearch2.configuration.logic.ConfigurationLogicImpl">
      <property name="configManager" ref="configManager"/>
  </bean>

  <service ref="elasticsearch2-configuration-logic" interface="org.safehaus.subutai.api.elasticsearch2.ConfigurationLogic" />
  <service ref="elasticsearch2-impl" interface="org.safehaus.subutai.api.elasticsearch2.Elasticsearch" />

</blueprint>
