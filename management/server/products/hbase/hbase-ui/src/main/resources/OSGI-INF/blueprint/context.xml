<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="hbaseManager" availability="mandatory" interface="org.safehaus.kiskis.mgmt.api.hbase.HBase"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.agentmanager.AgentManager"/>
    <reference id="tracker" availability="mandatory" interface="org.safehaus.kiskis.mgmt.api.tracker.Tracker"/>
    <reference id="dbManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.dbmanager.DbManager"/>

    <bean id="module" scope="singleton" class="org.safehaus.kiskis.mgmt.ui.hbase.HBaseUI"
          init-method="init" destroy-method="destroy">
        <property name="agentManager" ref="agentManager"/>
        <property name="tracker" ref="tracker"/>
        <property name="hbaseManager" ref="hbaseManager"/>
        <property name="dbManager" ref="dbManager"/>
    </bean>

    <service ref="module" interface="org.safehaus.kiskis.mgmt.server.ui.services.Module"/>

</blueprint>