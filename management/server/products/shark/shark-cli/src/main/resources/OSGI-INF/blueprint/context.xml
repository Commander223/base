<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <reference id="sharkManager" availability="mandatory"
               interface="org.safehaus.subutai.api.shark.Shark"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="shark/list-clusters">
            <action class="org.safehaus.subutai.cli.commands.ListClustersCommand">
                <property name="sharkManager" ref="sharkManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="shark/uninstall-cluster">
            <action class="org.safehaus.subutai.cli.commands.UninstallClusterCommand">
                <property name="sharkManager" ref="sharkManager"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
