<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <cxf:bus id="cxfBus1Cassandra">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <jaxrs:server address="/cassandra" id="cassandraRestService">
        <jaxrs:serviceBeans>
            <ref component-id="cassandraRestServiceImpl"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="cassandraRestServiceImpl" class="org.safehaus.kiskis.mgmt.cassandra.services.RestServiceImpl">
        <property name="cassandraManager" ref="cassandraManager"/>
    </bean>

    <reference id="cassandraManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.cassandra.Cassandra"/>
</blueprint>