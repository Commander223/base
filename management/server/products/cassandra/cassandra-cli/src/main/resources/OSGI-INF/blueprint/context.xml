<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

    <reference id="cassandraManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.cassandra.Cassandra"/>
    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.subutai.api.tracker.Tracker"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">

        <command name="cassandra/list-clusters">
            <action class="org.safehaus.subutai.cli.commands.ListClustersCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/uninstall-cluster">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.UninstallClusterCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/install-cluster">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.InstallClusterCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/start-cluster">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.StartAllNodesCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/stop-cluster">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.StopAllNodesCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/check-cluster">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.CheckAllNodesCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/describe-cluster">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.DescribeClusterCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
            </action>
        </command>

        <command name="cassandra/service-cassandra-start">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.StartServiceCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/service-cassandra-stop">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.StopServiceCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

        <command name="cassandra/service-cassandra-status">
            <action class="org.safehaus.kiskis.mgmt.cli.commands.StatusServiceCommand">
                <property name="cassandraManager" ref="cassandraManager"/>
                <property name="tracker" ref="tracker"/>
            </action>
        </command>

    </command-bundle>

</blueprint>
