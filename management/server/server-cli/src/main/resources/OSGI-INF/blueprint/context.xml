<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0">

    <reference id="sa" availability="mandatory" interface="org.safehaus.kiskis.mgmt.api.SomeApi"/> 
        
    <!--    <bean id="someCommand" class="org.safehaus.kiskis.mgmt.impl.SomeCommand">
        <property name="someApi" ref="someApi"/>                   
    </bean>-->
    
    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0" >
        
        <command name="subutai/somecommand" >
            <action class="org.safehaus.kiskis.mgmt.impl.SomeCommand" >
                <property name="sa" ref="sa"/>
            </action>
        </command>
        <command name="subutai/install" >
            <action class="org.safehaus.kiskis.mgmt.impl.InstallCommand" >
            </action>
        </command>
        <command name="subutai/purge" >
            <action class="org.safehaus.kiskis.mgmt.impl.PurgeCommand" >
            </action>
        </command>
        <command name="subutai/status" >
            <action class="org.safehaus.kiskis.mgmt.impl.StatusCommand" >
            </action>
        </command>
        <command name="subutai/stop" >
            <action class="org.safehaus.kiskis.mgmt.impl.StopCommand" >
            </action>
        </command>
        <command name="subutai/start" >
            <action class="org.safehaus.kiskis.mgmt.impl.StartCommand" >
            </action>
        </command>
        
    </command-bundle>
    
</blueprint>