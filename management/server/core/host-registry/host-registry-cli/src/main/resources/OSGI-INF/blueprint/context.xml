<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="hostRegistry" availability="mandatory"
             interface="org.safehaus.subutai.core.hostregistry.api.HostRegistry" />

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="host/list">
      <action class="org.safehaus.subutai.core.hostregistry.cli.ListHostsCommand">
        <argument ref="hostRegistry" />
      </action>
    </command>
  </command-bundle>

</blueprint>
