<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    >

  <reference id="broker" availability="mandatory"
             interface="org.safehaus.subutai.core.broker.api.Broker" />

  <bean id="containerRegistry"
        class="org.safehaus.subutai.core.hostregistry.impl.HostRegistryImpl"
        init-method="init" destroy-method="dispose" scope="singleton" activation="eager">
    <argument ref="broker" />
  </bean>

  <service ref="containerRegistry" interface="org.safehaus.subutai.core.hostregistry.api.HostRegistry" />

</blueprint>
