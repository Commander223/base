<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.api.agentmanager.AgentManager"/>
    <reference id="commandRunner" availability="mandatory"
               interface="org.safehaus.subutai.api.commandrunner.CommandRunner"/>
    <!-- dbManager reference is used for db persistence -->
    <reference id="dbManager" availability="mandatory"
               interface="org.safehaus.subutai.api.dbmanager.DbManager"/>

    <bean id="packageInfoStorageDb"
          class="org.safehaus.subutai.impl.packagemanager.storage.DbPackageInfoStorage" >
        <argument ref="dbManager"/>
    </bean>
    <bean id="packageInfoStorageFile"
          class="org.safehaus.subutai.impl.packagemanager.storage.FilePackageInfoStorage" >
        <argument value="/opt/subutai/packages"/>
    </bean>
    
    <bean id="packageManager" scope="singleton" class="org.safehaus.subutai.impl.packagemanager.PackageManagerImpl">
        <property name="agentManager" ref="agentManager"/>
        <property name="commandRunner" ref="commandRunner"/>
        <property name="storage" ref="packageInfoStorageFile"/>
    </bean>

    <service ref="packageManager" interface="org.safehaus.subutai.api.packagemanager.PackageManager"/>

</blueprint>
