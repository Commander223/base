<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="commandRunner" availability="mandatory"
             interface="org.safehaus.subutai.core.command.api.CommandRunner" />
  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.agent.api.AgentManager" />
  <reference id="monitor" availability="mandatory"
             interface="org.safehaus.subutai.core.monitor.api.Monitor" />
  <reference id="templateManager" availability="mandatory"
             interface="org.safehaus.subutai.core.template.api.TemplateManager" />
  <reference id="templateRegistry" availability="mandatory"
             interface="org.safehaus.subutai.core.registry.api.TemplateRegistryManager" />
  <reference id="dbManager" availability="mandatory"
             interface="org.safehaus.subutai.core.db.api.DbManager" />

  <bean id="lxcmanager" scope="singleton" class="org.safehaus.subutai.core.container.impl.lxcmanager.LxcManagerImpl"
        init-method="init" destroy-method="destroy">
    <argument ref="agentManager" />
    <argument ref="commandRunner" />
    <argument ref="monitor" />
  </bean>

  <bean id="containerManager" scope="singleton"
        class="org.safehaus.subutai.core.container.impl.container.ContainerManagerImpl"
        init-method="init" destroy-method="destroy">
    <property name="lxcManager" ref="lxcmanager" />
    <property name="agentManager" ref="agentManager" />
    <property name="commandRunner" ref="commandRunner" />
    <property name="templateManager" ref="templateManager" />
    <property name="templateRegistry" ref="templateRegistry" />
    <property name="dbManager" ref="dbManager" />
  </bean>

  <service ref="lxcmanager" interface="org.safehaus.subutai.core.container.api.lxcmanager.LxcManager" />
  <service ref="containerManager" interface="org.safehaus.subutai.core.container.api.container.ContainerManager" />

</blueprint>
