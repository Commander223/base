<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="pluginManager" availability="mandatory"
             interface="org.safehaus.subutai.core.plugin.api.PluginManager"/>

  <bean id="module" scope="singleton" class="org.safehaus.subutai.core.plugin.ui.PluginManagerPortalModule"
        init-method="init" destroy-method="destroy">
    <property name="pluginManager" ref="pluginManager"/>
  </bean>

  <service ref="module" interface="org.safehaus.subutai.server.ui.api.PortalModule"/>

</blueprint>