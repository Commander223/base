<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.core.tracker.api.Tracker" />

  <reference id="pluginManager" availability="mandatory"
             interface="io.subutai.pluginmanager.api.PluginManager" />

  <bean id="module" scope="singleton" class="io.subutai.pluginmanager.ui.PluginManagerPortalModule"
        init-method="init" destroy-method="destroy">
    <argument ref="pluginManager" />
    <argument ref="tracker" />
  </bean>

  <service ref="module" interface="org.safehaus.subutai.server.ui.api.PortalModule" />

</blueprint>
