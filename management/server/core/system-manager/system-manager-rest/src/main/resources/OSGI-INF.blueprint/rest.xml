<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusSystem">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="systemManager" availability="mandatory"
             interface="io.subutai.core.systemmanager.api.SystemManager" />

  <bean id="systemImpl" class="io.subutai.core.systemmanager.rest.RestServiceImpl">
    <property name="systemManager" ref="systemManager" />
  </bean>

  <jaxrs:server address="/v1/system" id="systemRestService">
    <jaxrs:serviceBeans>
      <ref component-id="systemImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
