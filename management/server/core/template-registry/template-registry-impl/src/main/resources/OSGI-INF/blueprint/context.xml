<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="templateService"
             interface="org.safehaus.subutai.common.protocol.api.TemplateService"
             availability="mandatory" />

  <reference id="gitManager"
             interface="io.subutai.core.git.api.GitManager"
             availability="optional" />

  <bean id="templateRegistry" scope="singleton" activation="eager"
        class="org.safehaus.subutai.core.registry.impl.TemplateRegistryImpl" init-method="init" destroy-method="dispose">
    <property name="templateService" ref="templateService" />
    <property name="gitManager" ref="gitManager" />
  </bean>

  <service ref="templateRegistry"
           interface="org.safehaus.subutai.core.registry.api.TemplateRegistry" />

</blueprint>
