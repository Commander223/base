<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0">

  <!-- ***************************************************************** -->
  <bean id="daoManager" init-method="init" class="io.subutai.common.dao.DaoManager" scope="prototype">
    <jpa:unit unitname="commonServicePUnit" property="entityManagerFactory" />
  </bean>
  <!-- ***************************************************************** -->

  <reference id="gitManager"
             interface="io.subutai.core.git.api.GitManager"
             availability="optional" />

  <bean id="templateRegistry" scope="singleton" activation="eager"
        class="io.subutai.core.registry.impl.TemplateRegistryImpl" init-method="init">
    <argument ref="daoManager" />
    <argument ref="gitManager" />
  </bean>

  <service ref="templateRegistry"
           interface="io.subutai.core.registry.api.TemplateRegistry" />

</blueprint>
