<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <reference id="communicationManager" availability="mandatory"
               interface="org.safehaus.subutai.core.communication.api.CommunicationManager"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agentmanager.api.AgentManager"/>

    <bean id="module" scope="singleton"
          class="org.safehaus.subutai.core.commandrunner.impl.CommandRunnerImpl"
          init-method="init" destroy-method="destroy" activation="eager">
        <argument ref="communicationManager"/>
        <argument ref="agentManager"/>
    </bean>

    <service ref="module" interface="org.safehaus.subutai.core.commandrunner.api.CommandRunner"/>

</blueprint>
