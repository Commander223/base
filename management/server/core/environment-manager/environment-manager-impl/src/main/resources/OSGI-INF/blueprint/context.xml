<?xml version="1.0" encoding="UTF-8"?>
<blueprint default-activation="eager"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0" xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"

           xsi:schemaLocation="
            http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0
            http://www.w3.org/2001/XMLSchema-instance http://www.w3.org/2001/XMLSchema-instance
            http://aries.apache.org/xmlns/jpa/v1.0.0 http://aries.apache.org/xmlns/jpa/v1.0.0
            http://aries.apache.org/xmlns/transactions/v1.0.0 http://aries.apache.org/xmlns/transactions/v1.0.0 ">

  <service ref="environmentManager" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

  <reference id="templateRegistry" availability="mandatory"
             interface="org.safehaus.subutai.core.registry.api.TemplateRegistry" />
  <reference id="securityManager" availability="mandatory"
             interface="org.safehaus.subutai.core.security.api.SecurityManager" />
  <reference id="peerManager"
             interface="org.safehaus.subutai.core.peer.api.PeerManager" />
  <reference id="tracker" interface="org.safehaus.subutai.core.tracker.api.Tracker" />

  <!--************************** Tempporary *************************** -->
  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/environment_manager" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>
  <!-- ****************************************************************  -->

  <bean id="environmentManager" scope="singleton"
        init-method="init"
        destroy-method="destroy"
        class="org.safehaus.subutai.core.environment.impl.EnvironmentManagerImpl">

    <jpa:context unitname="envManagerPUnit" property="entityManager" />
    <tx:transaction method="*" value="Required"/>

    <property name="templateRegistry" ref="templateRegistry" />
    <property name="securityManager"  ref="securityManager" />
    <property name="tracker"          ref="tracker" />
    <property name="peerManager"      ref="peerManager" />
    <property name="dataSource"       ref="dataSource" />

  </bean>

</blueprint>
