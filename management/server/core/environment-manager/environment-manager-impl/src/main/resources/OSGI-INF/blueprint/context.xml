<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <service ref="environmentManager" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager"/>

    <reference id="dbManager" availability="mandatory" interface="org.safehaus.subutai.core.db.api.DbManager"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agentmanager.api.AgentManager"/>
    <reference id="containerManager" availability="mandatory"
               interface="org.safehaus.subutai.core.container.api.container.ContainerManager"/>
    <reference id="templateRegistryManager" availability="mandatory"
               interface="org.safehaus.subutai.core.registry.api.TemplateRegistryManager"/>
    <reference id="networkManager" availability="mandatory"
               interface="org.safehaus.subutai.core.network.api.NetworkManager"/>

    <bean id="environmentManager" scope="singleton" class="org.safehaus.subutai.core.environment.impl.EnvironmentManagerImpl">
        <argument ref="containerManager"/>
        <argument ref="templateRegistryManager"/>
        <argument ref="dbManager"/>
        <argument ref="agentManager"/>
        <argument ref="networkManager"/>
    </bean>

</blueprint>
