<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/environment_manager" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service ref="environmentManager" interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.agent.api.AgentManager" />
  <reference id="containerManager" availability="mandatory"
             interface="org.safehaus.subutai.core.container.api.container.ContainerManager" />
  <reference id="templateRegistry" availability="mandatory"
             interface="org.safehaus.subutai.core.registry.api.TemplateRegistry" />
  <reference id="networkManager" availability="mandatory"
             interface="org.safehaus.subutai.core.network.api.NetworkManager" />
  <reference id="peerCommandDispatcher"
             interface="org.safehaus.subutai.core.peer.command.dispatcher.api.PeerCommandDispatcher" />

  <bean id="environmentManager" scope="singleton"
        init-method="init"
        destroy-method="destroy"
        class="org.safehaus.subutai.core.environment.impl.EnvironmentManagerImpl">
    <property name="containerManager" ref="containerManager" />
    <property name="templateRegistry" ref="templateRegistry" />
    <property name="agentManager" ref="agentManager" />
    <property name="networkManager" ref="networkManager" />
    <property name="peerCommandDispatcher" ref="peerCommandDispatcher" />
    <argument ref="dataSource" />
  </bean>

</blueprint>
