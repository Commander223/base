<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusMonitor">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="monitor" availability="mandatory"
             interface="io.subutai.core.metric.api.Monitor" />
  <reference id="environmentManager" availability="mandatory"
             interface="io.subutai.core.env.api.EnvironmentManager" />

  <bean id="monitorRestImpl" class="io.subutai.core.metric.rest.RestServiceImpl">
    <argument ref="monitor" />
    <argument ref="environmentManager" />
  </bean>

  <jaxrs:server address="/monitor" id="registryRestService">
    <jaxrs:serviceBeans>
      <ref component-id="monitorRestImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
