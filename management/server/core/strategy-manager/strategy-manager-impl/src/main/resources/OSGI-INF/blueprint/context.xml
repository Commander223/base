<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="placementStrategyFactory"
          class="org.safehaus.subutai.impl.strategymanager.PlacementStrategyFactoryImpl">
    </bean>

    <bean id="roundRobinStrategy"
          class="org.safehaus.subutai.impl.strategymanager.RoundRobinStrategy">
    </bean>

    <bean id="defaultStrategy"
          class="org.safehaus.subutai.impl.strategymanager.DefaultContainerPlacementStrategy">
    </bean>

    <bean id="bestServerStrategy"
          class="org.safehaus.subutai.impl.strategymanager.BestServerStrategy">
    </bean>

    <service ref="placementStrategyFactory" interface="org.safehaus.subutai.api.strategymanager.PlacementStrategyFactory"/>
    <service ref="roundRobinStrategy" interface="org.safehaus.subutai.api.strategymanager.ContainerPlacementStrategy"/>
    <service ref="defaultStrategy" interface="org.safehaus.subutai.api.strategymanager.ContainerPlacementStrategy"/>
    <service ref="bestServerStrategy" interface="org.safehaus.subutai.api.strategymanager.ContainerPlacementStrategy"/>

</blueprint>
