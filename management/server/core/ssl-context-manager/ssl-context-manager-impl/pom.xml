<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>ssl-context-manager</artifactId>
    <groupId>org.safehaus.subutai</groupId>
    <version>2.0.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>ssl-context-manager-impl</artifactId>
  <packaging>bundle</packaging>
  <name>Subutai Ssl Context Factory</name>
  <description>Subutai Ssl Context Factory</description>

  <properties>
    <bundle.namespace>org.safehaus.subutai.identity.ssl</bundle.namespace>
    <servlet.spec.groupId>javax.servlet</servlet.spec.groupId>
    <servlet.spec.artifactId>javax.servlet-api</servlet.spec.artifactId>
    <servlet.spec.version>3.1.0</servlet.spec.version>
    <dependency.fileinstall.version>4.2.1</dependency.fileinstall.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>subutai-common</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>jetty-ssl-fragment</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>ssl-context-manager-api</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Export-Package>
              sun.security.validator.KeyStores;
              sun.security.validator;
              {local-packages};version=${project.version};
            </Export-Package>
            <Bundle-SymbolicName>${project.groupId}.ssl.manager.impl</Bundle-SymbolicName>
            <Import-Package>*</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>