<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="ssl-context/ssl-context">
      <action class="org.safehaus.subutai.core.ssl.manager.cli.ReloadKeyStoreCommand">
        <argument ref="sslContextManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="ssl-context/jetty">
      <action class="org.safehaus.subutai.core.ssl.manager.cli.RestartJettyBundle">
      </action>
    </command>
  </command-bundle>

  <reference id="sslContextManager" availability="mandatory"
             interface="org.safehaus.subutai.core.ssl.manager.api.SubutaiSslContextFactory" />

</blueprint>
