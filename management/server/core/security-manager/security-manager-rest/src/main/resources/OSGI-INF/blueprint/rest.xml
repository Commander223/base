<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation=
               "http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                 http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusSecurityManager">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <jaxrs:server address="/security" id="securityManagerRest">
    <jaxrs:serviceBeans>
      <ref component-id="securityManagerRestImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <reference id="securityManagerRef" availability="mandatory" interface="io.subutai.core.security.api.SecurityManager" />

  <bean id="securityManagerRestImpl" class="io.subutai.core.security.rest.SecurityManagerRestImpl">
    <argument ref="securityManagerRef" />
  </bean>


</blueprint>