<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="repositoryManager" availability="mandatory"
             interface="org.safehaus.subutai.core.repository.api.RepositoryManager" />

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="repo/add">
      <action class="org.safehaus.subutai.core.repository.cli.AddPackageCommand">
        <argument ref="repositoryManager" />
      </action>
    </command>
  </command-bundle>
  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="repo/remove">
      <action class="org.safehaus.subutai.core.repository.cli.RemovePackageCommand">
        <argument ref="repositoryManager" />
      </action>
    </command>
  </command-bundle>
  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="repo/extract">
      <action class="org.safehaus.subutai.core.repository.cli.ExtractPackageCommand">
        <argument ref="repositoryManager" />
      </action>
    </command>
  </command-bundle>
  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="repo/list">
      <action class="org.safehaus.subutai.core.repository.cli.ListPackagesCommand">
        <argument ref="repositoryManager" />
      </action>
    </command>
  </command-bundle>
  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="repo/info">
      <action class="org.safehaus.subutai.core.repository.cli.PackageInfoCommand">
        <argument ref="repositoryManager" />
      </action>
    </command>
  </command-bundle>

</blueprint>
