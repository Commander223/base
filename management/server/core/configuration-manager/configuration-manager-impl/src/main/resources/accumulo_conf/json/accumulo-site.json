{
    "path": "accumulo_conf/accumulo-site.xml",
    "type": "XML",
    "configFields": [
        {
            "fieldName": "instance.zookeeper.host",
            "label": "instance.zookeeper.host",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "localhost:2181"
        },
        {
            "fieldName": "logger.dir.walog",
            "label": "logger.dir.walog",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "walogs"
        },
        {
            "fieldName": "instance.secret",
            "label": "instance.secret",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "DEFAULT"
        },
        {
            "fieldName": "tserver.memory.maps.max",
            "label": "tserver.memory.maps.max",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "${memMapMax}"
        },
        {
            "fieldName": "tserver.memory.maps.native.enabled",
            "label": "tserver.memory.maps.native.enabled",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "${nativeEnabled}"
        },
        {
            "fieldName": "tserver.cache.data.size",
            "label": "tserver.cache.data.size",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "${cacheDataSize}"
        },
        {
            "fieldName": "tserver.cache.index.size",
            "label": "tserver.cache.index.size",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "${cacheIndexSize}"
        },
        {
            "fieldName": "trace.token.property.password",
            "label": "trace.token.property.password",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "secret"
        },
        {
            "fieldName": "trace.user",
            "label": "trace.user",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "root"
        },
        {
            "fieldName": "tserver.sort.buffer.size",
            "label": "tserver.sort.buffer.size",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "${sortBufferSize}"
        },
        {
            "fieldName": "tserver.walog.max.size",
            "label": "tserver.walog.max.size",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "${waLogMaxSize}"
        },
        {
            "fieldName": "general.classpaths",
            "label": "general.classpaths",
            "required": true,
            "enabled": true,
            "type": "textfield",
            "value": "$ACCUMULO_HOME/lib/accumulo-server.jar"
        }
    ]
}