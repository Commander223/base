<?xml version="1.0" encoding="UTF-8"?>
<blueprint default-activation="eager"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="templateRegistry" availability="mandatory"
             interface="org.safehaus.subutai.core.registry.api.TemplateRegistry" />
  <reference id="peerManager"
             interface="org.safehaus.subutai.core.peer.api.PeerManager" />

  <bean id="environmentManager" scope="singleton"
        class="org.safehaus.subutai.core.env.impl.EnvironmentManagerImpl">
    <argument ref="templateRegistry" />
    <argument ref="peerManager" />
  </bean>

  <service ref="environmentManager" interface="org.safehaus.subutai.core.env.api.EnvironmentManager" />

</blueprint>
