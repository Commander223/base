<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

    <cxf:bus id="cxfBusTracker">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.subutai.core.tracker.api.Tracker"/>

    <bean id="trackerImpl" class="org.safehaus.subutai.core.tracker.rest.RestServiceImpl">
        <property name="tracker" ref="tracker"/>
    </bean>

    <jaxrs:server address="/tracker" id="trackerRestService">
        <jaxrs:serviceBeans>
            <ref component-id="trackerImpl"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

</blueprint>
