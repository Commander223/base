<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="dbManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.api.dbmanager.DbManager"/>

    <bean id="tracker" class="org.safehaus.kiskis.mgmt.impl.tracker.TrackerImpl"
          scope="singleton" activation="eager">
        <property name="dbManager" ref="dbManager"/>
    </bean>

    <service ref="tracker" interface="org.safehaus.kiskis.mgmt.api.tracker.Tracker"/>

</blueprint>
