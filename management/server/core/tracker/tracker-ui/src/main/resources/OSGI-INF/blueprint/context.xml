<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    default-activation="eager"
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.core.tracker.api.Tracker" />

  <bean id="module" scope="singleton" class="org.safehaus.subutai.core.tracker.ui.TrackerPortalModule"
        init-method="init" destroy-method="destroy">
    <property name="tracker" ref="tracker" />
  </bean>

  <service ref="module" interface="org.safehaus.subutai.server.ui.api.PortalModule" />

</blueprint>
