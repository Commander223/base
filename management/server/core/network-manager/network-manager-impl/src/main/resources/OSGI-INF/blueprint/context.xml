<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
  <reference id="commandDispatcher" availability="mandatory"
             interface="org.safehaus.subutai.core.dispatcher.api.CommandDispatcher" />

  <bean id="networkManager" scope="singleton" class="org.safehaus.subutai.core.network.impl.NetworkManagerImpl">
    <argument ref="commandDispatcher" />
  </bean>

  <service ref="networkManager" interface="org.safehaus.subutai.core.network.api.NetworkManager" />

</blueprint>
