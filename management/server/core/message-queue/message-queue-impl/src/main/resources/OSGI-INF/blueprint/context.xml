<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/queue" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <reference id="peerManager" availability="mandatory"
             interface="org.safehaus.subutai.core.peer.api.PeerManager" />

  <bean id="messageQueue" class="org.safehaus.subutai.core.message.impl.QueueImpl" scope="singleton">
    <argument ref="peerManager" />
    <argument ref="dataSource" />
  </bean>

  <service ref="messageQueue" interface="org.safehaus.subutai.core.message.api.Queue" />

  <service ref="messageQueue" interface="org.safehaus.subutai.core.message.api.MessageProcessor" />

</blueprint>
