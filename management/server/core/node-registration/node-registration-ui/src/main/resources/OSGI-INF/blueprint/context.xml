<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="tracker" availability="mandatory"
             interface="io.subutai.core.tracker.api.Tracker" />

  <reference id="registrationManager" availability="mandatory"
             interface="io.subutai.core.registration.api.RegistrationManager" />

  <bean id="module" scope="singleton" class="io.subutai.core.registration.ui.NodeRegistrationPortalModule"
        init-method="init" destroy-method="destroy">

    <argument ref="registrationManager" />
    <argument ref="tracker" />
  </bean>

  <service ref="module" interface="io.subutai.server.ui.api.PortalModule" />

</blueprint>
