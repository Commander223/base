<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <!-- Allow the use of system properties -->
    <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]"/>

    <cm:property-placeholder persistent-id="AmqConfig" update-strategy="none">
        <cm:default-properties>
            <cm:property name="amqPort" value="61616"/>
            <cm:property name="amqBindAddress" value="0.0.0.0"/>
            <cm:property name="amqServiceQueue" value="SERVICE_QUEUE"/>
            <cm:property name="amqBrokerCertificateName" value="broker.ks"/>
            <cm:property name="amqBrokerTrustStoreName" value="broker.ts"/>
            <cm:property name="amqBrokerCertificatePwd" value="broker"/>
            <cm:property name="amqBrokerTrustStorePwd" value="broker"/>
            <cm:property name="amqExpiredMessagesHighWatermark" value="1000"/>
            <cm:property name="amqConstantPendingMessageLimit" value="100"/>
            <cm:property name="amqExpireMessagesPeriodSec" value="300"/>
            <cm:property name="amqOfflineDurableSubscriberTimeoutSec" value="600"/>
            <cm:property name="amqOfflineDurableSubscriberTaskScheduleSec" value="600"/>
            <cm:property name="amqMaxConnections" value="10"/>
            <cm:property name="amqExecutorPoolSize" value="9"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="communicationService"
          class="org.safehaus.kiskis.mgmt.server.communication.CommandTransport"
          init-method="init" destroy-method="destroy" scope="singleton" activation="eager">
        <property name="amqPort" value="${amqPort}"/>
        <property name="amqBindAddress" value="${amqBindAddress}"/>
        <property name="amqServiceQueue" value="${amqServiceQueue}"/>
        <property name="amqBrokerCertificateName" value="${amqBrokerCertificateName}"/>
        <property name="amqBrokerTrustStoreName" value="${amqBrokerTrustStoreName}"/>
        <property name="amqBrokerCertificatePwd" value="${amqBrokerCertificatePwd}"/>
        <property name="amqBrokerTrustStorePwd" value="${amqBrokerTrustStorePwd}"/>
        <property name="amqExpiredMessagesHighWatermark" value="${amqExpiredMessagesHighWatermark}"/>
        <property name="amqConstantPendingMessageLimit" value="${amqConstantPendingMessageLimit}"/>
        <property name="amqExpireMessagesPeriodSec" value="${amqExpireMessagesPeriodSec}"/>
        <property name="amqOfflineDurableSubscriberTimeoutSec" value="${amqOfflineDurableSubscriberTimeoutSec}"/>
        <property name="amqOfflineDurableSubscriberTaskScheduleSec" value="${amqOfflineDurableSubscriberTaskScheduleSec}"/>
        <property name="amqMaxConnections" value="${amqMaxConnections}"/>
        <property name="amqExecutorPoolSize" value="${amqExecutorPoolSize}"/>
    </bean>

    <service ref="communicationService"
             interface="org.safehaus.kiskis.mgmt.shared.protocol.api.CommandTransportInterface">
        <service-properties>
            <entry key="service.exported.interfaces" value="*"/>
        </service-properties>
    </service>
</blueprint>
