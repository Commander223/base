<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    >

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.agent.api.AgentManager" />

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="agent/get-agent-by-hostname">
      <action class="org.safehaus.subutai.core.agent.cli.GetAgentByHostnameCommand">
        <argument ref="agentManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="agent/get-agent-by-uuid">
      <action class="org.safehaus.subutai.core.agent.cli.GetAgentByUUIDCommand">
        <argument ref="agentManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="agent/get-agents">
      <action class="org.safehaus.subutai.core.agent.cli.GetAgentsCommand">
        <argument ref="agentManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="agent/get-lxc-agents-by-parent-hostname">
      <action class="org.safehaus.subutai.core.agent.cli.GetLxcAgentsByParentHostnameCommand">
        <argument ref="agentManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="agent/get-lxc-agents">
      <action class="org.safehaus.subutai.core.agent.cli.GetLxcAgentsCommand">
        <argument ref="agentManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="agent/get-physical-agents">
      <action class="org.safehaus.subutai.core.agent.cli.GetPhysicalAgentsCommand">
        <property name="agentManager" ref="agentManager" />
      </action>
    </command>
  </command-bundle>

</blueprint>
