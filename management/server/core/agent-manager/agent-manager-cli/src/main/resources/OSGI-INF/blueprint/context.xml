<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        >

    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agentmanager.api.AgentManager"/>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="agent/get-agent-by-hostname">
            <action class="org.safehaus.subutai.core.agentmanager.cli.GetAgentByHostnameCommand">
                <property name="agentManager" ref="agentManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="agent/get-agent-by-uuid">
            <action class="org.safehaus.subutai.core.agentmanager.cli.GetAgentByUUIDCommand">
                <property name="agentManager" ref="agentManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="agent/get-agents">
            <action class="org.safehaus.subutai.core.agentmanager.cli.GetAgentsCommand">
                <property name="agentManager" ref="agentManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="agent/get-lxc-agents-by-parent-hostname">
            <action class="org.safehaus.subutai.core.agentmanager.cli.GetLxcAgentsByParentHostnameCommand">
                <property name="agentManager" ref="agentManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="agent/get-lxc-agents">
            <action class="org.safehaus.subutai.core.agentmanager.cli.GetLxcAgentsCommand">
                <property name="agentManager" ref="agentManager"/>
            </action>
        </command>
    </command-bundle>

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
        <command name="agent/get-physical-agents">
            <action class="org.safehaus.subutai.core.agentmanager.cli.GetPhysicalAgentsCommand">
                <property name="agentManager" ref="agentManager"/>
            </action>
        </command>
    </command-bundle>

</blueprint>
