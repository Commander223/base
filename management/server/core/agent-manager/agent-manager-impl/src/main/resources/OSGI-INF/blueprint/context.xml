<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="communicationService" availability="mandatory"
             interface="org.safehaus.subutai.core.communication.api.CommunicationManager" />
  <reference id="peerManager" availability="mandatory"
             interface="org.safehaus.subutai.core.peer.api.PeerManager" />

  <bean id="agentManager"
        class="org.safehaus.subutai.core.agent.impl.AgentManagerImpl"
        init-method="init" destroy-method="destroy" scope="singleton">
    <argument ref="communicationService" />
    <argument ref="peerManager" />
  </bean>

  <service ref="agentManager" interface="org.safehaus.subutai.core.agent.api.AgentManager" />

</blueprint>
