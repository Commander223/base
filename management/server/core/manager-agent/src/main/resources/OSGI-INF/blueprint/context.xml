<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <reference id="communicationService" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.shared.protocol.api.CommunicationService"/>
    <reference id="dbManagerService" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.shared.protocol.api.DbManager"/>

    <bean id="agentManager"
          class="org.safehaus.kiskis.mgmt.impl.agentmanager.AgentManagerImpl"
          init-method="init" destroy-method="destroy" scope="singleton">
        <property name="communicationService" ref="communicationService"/>
        <property name="dbManagerService" ref="dbManagerService"/>
    </bean>
    
    <service ref="agentManager"
             interface="org.safehaus.kiskis.mgmt.api.agentmanager.AgentManager">
        <service-properties>
            <entry key="service.exported.interfaces" value="*"/>
        </service-properties>
    </service>
    
</blueprint>
