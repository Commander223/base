{
    "fields": ["log_host", "name", "val", "units", "@timestamp"],
    "query": {
        "filtered": {
            "filter": {
                "and": [
                    {
                        "range": {
                            "@timestamp": {
                                "from": "$startDate",
                                "to": "$endDate"
                            }
                        }
                    },
                    {
                        "terms": {
                            "log_host": $hosts
                        }
                    },
                    {
                        "terms": {
                            "name": $names
                        }
                    }
                ]
            }
        }
    },
    "sort": {
        "@timestamp": {
            "order": "desc",
            "ignore_unmapped": true
        }
    },
    "size": $limit
}
