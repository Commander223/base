<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="monitor" availability="mandatory" interface="org.safehaus.subutai.api.monitoring.Monitor"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.api.agentmanager.AgentManager" />

    <bean id="module" scope="singleton" class="org.safehaus.subutai.ui.monitoring.MonitorModule">
        <property name="monitor" ref="monitor"/>
        <property name="agentManager" ref="agentManager" />
    </bean>

    <service ref="module" interface="org.safehaus.subutai.server.ui.api.PortalModule"/>

</blueprint>
