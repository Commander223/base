<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>http-context-manager</artifactId>
    <groupId>io.subutai</groupId>
    <version>4.0.0-RC1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>http-context-manager-api</artifactId>
  <packaging>bundle</packaging>
  <name>Subutai HTTP Context Manager Api</name>
  <description>Subutai HTTP Context Manager Api</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Export-Package>
              {local-packages};version=${project.version};
            </Export-Package>
            <Bundle-SymbolicName>${project.groupId}.core.http.manager.api</Bundle-SymbolicName>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>