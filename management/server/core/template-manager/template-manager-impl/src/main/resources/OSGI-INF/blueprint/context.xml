<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="commandRunner" availability="mandatory"
               interface="org.safehaus.subutai.api.commandrunner.CommandRunner" />
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.api.agentmanager.AgentManager" />
    <reference id="templateRegistry" availability="mandatory"
               interface ="org.safehaus.subutai.api.templateregistry.TemplateRegistryManager"/>
    <reference id="repoManager" availability="mandatory"
               interface ="org.safehaus.subutai.api.aptrepositorymanager.AptRepositoryManager"/>

    
    <bean id="templateManager" scope="singleton" 
          class="org.safehaus.subutai.impl.manager.TemplateManagerImpl"
          init-method="init" destroy-method="destroy">
        <property name="agentManager" ref="agentManager" />
        <property name="commandRunner" ref="commandRunner" />
        <property name="templateRegistry" ref="templateRegistry"/>
        <property name="repoManager" ref="repoManager"/>
    </bean>
    
    <service ref="templateManager" interface="org.safehaus.subutai.api.manager.TemplateManager" />

</blueprint>
