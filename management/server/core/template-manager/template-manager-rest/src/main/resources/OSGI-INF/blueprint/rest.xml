<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation=
               "http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                 http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusTemplateManager">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="templateManager" availability="mandatory"
             interface="org.safehaus.subutai.core.template.api.TemplateManager" />
  <reference id="templateRegistry" availability="mandatory"
             interface="org.safehaus.subutai.core.registry.api.TemplateRegistry" />
  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.agent.api.AgentManager" />
  <reference id="repoManager" availability="mandatory"
             interface="org.safehaus.subutai.core.apt.api.AptRepositoryManager" />
  <reference id="commandRunner" availability="mandatory"
             interface="org.safehaus.subutai.core.command.api.CommandRunner" />

  <bean id="templateManagerRestServiceBean" class="org.safehaus.subutai.core.template.rest.RestServiceImpl">
    <property name="templateManager" ref="templateManager" />
    <property name="templateRegistry" ref="templateRegistry" />
    <property name="aptRepoManager" ref="repoManager" />
    <property name="agentManager" ref="agentManager" />
    <property name="commandRunner" ref="commandRunner" />
  </bean>

  <jaxrs:server address="/template" id="templateManagerRestService">
    <jaxrs:serviceBeans>
      <ref component-id="templateManagerRestServiceBean" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>