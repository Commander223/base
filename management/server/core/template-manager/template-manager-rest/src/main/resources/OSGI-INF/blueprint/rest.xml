<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation=
                "http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                 http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
                 http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <cxf:bus id="cxfBusTemplateManager">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <jaxrs:server address="/template" id="templateManagerRestService">
        <jaxrs:serviceBeans>
            <ref org.safehaus.subutai.server.ui.component-id="templateManagerRestServiceBean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="templateManagerRestServiceBean" class="org.safehaus.subutai.cassandra.services.RestServiceImpl">
        <property name="templateManager" ref="templateManager"/>
    </bean>

    <reference id="templateManager" availability="mandatory"
               interface="org.safehaus.subutai.api.template.manager.TemplateManager"/>
    
</blueprint>