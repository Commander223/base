<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/message">
      <action class="io.subutai.core.peer.cli.MessageCommand">
        <argument ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/get-quota">
      <action class="io.subutai.core.peer.cli.GetContainerQuotaCommand">
        <argument ref="peerManager" />
        <argument ref="environmentManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/ls">
      <action class="io.subutai.core.peer.cli.ListCommand">
        <property name="peerManager" ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/id">
      <action class="io.subutai.core.peer.cli.GetIdCommand">
        <property name="peerManager" ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/hosts">
      <action class="io.subutai.core.peer.cli.HostsCommand">
        <property name="peerManager" ref="peerManager" />
        <property name="identityManager" ref="identityManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/stop-container">
      <action class="io.subutai.core.peer.cli.StopLxcCommand">
        <property name="peerManager" ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/start-container">
      <action class="io.subutai.core.peer.cli.StartLxcCommand">
        <property name="peerManager" ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/tag-container">
      <action class="io.subutai.core.peer.cli.TagCommand">
        <property name="peerManager" ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="peer/get-reserved-vni">
      <action class="io.subutai.core.peer.cli.GetReservedVnisCommand">
        <property name="peerManager" ref="peerManager" />
      </action>
    </command>
  </command-bundle>

  <reference id="peerManager" availability="mandatory" interface="io.subutai.core.peer.api.PeerManager" />
  <reference id="identityManager" availability="mandatory"
             interface="io.subutai.core.identity.api.IdentityManager" />

  <reference id="environmentManager" availability="mandatory"
             interface="io.subutai.core.environment.api.EnvironmentManager" />

</blueprint>
