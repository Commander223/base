<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusPeerManager">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <bean id="jacksonMapper" class="com.fasterxml.jackson.databind.ObjectMapper">
  </bean>

  <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider">
    <property name="mapper" ref="jacksonMapper" />
  </bean>

  <jaxrs:server address="/peer" id="peerRestService">
    <jaxrs:serviceBeans>
      <ref component-id="peerRestServiceImpl" />
    </jaxrs:serviceBeans>
    <jaxrs:providers>
      <ref component-id="jsonProvider" />
    </jaxrs:providers>
  </jaxrs:server>

  <bean id="peerRestServiceImpl" class="io.subutai.core.peer.rest.RestServiceImpl">
    <argument ref="peerManager" />
    <argument ref="httpContextManager" />
    <argument ref="securityManager" />
  </bean>

  <reference id="peerManager" availability="mandatory"
             interface="io.subutai.core.peer.api.PeerManager" />

  <reference id="httpContextManager" availability="mandatory"
             interface="io.subutai.core.http.manager.api.HttpContextManager" />

  <reference id="securityManager" availability="mandatory"
             interface="io.subutai.core.security.api.SecurityManager" />


</blueprint>