<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.safehaus.subutai</groupId>
    <artifactId>peer-manager-parent</artifactId>
    <version>2.0.0</version>
  </parent>

  <artifactId>peer-manager-impl</artifactId>
  <packaging>bundle</packaging>
  <name>Subutai Peer Manager</name>
  <description>Subutai Peer Manager Impl</description>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>peer-manager-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.safehaus.subutai</groupId>
      <artifactId>db-manager-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.safehaus.subutai</groupId>
      <artifactId>agent-manager-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.safehaus.subutai</groupId>
      <artifactId>container-manager-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-frontend-jaxrs</artifactId>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.groupId}.core.peer.impl</Bundle-SymbolicName>
            <Export-Package>
              {local-packages}, {local-packages}.*;version=${project.version};-noimport:=true
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
