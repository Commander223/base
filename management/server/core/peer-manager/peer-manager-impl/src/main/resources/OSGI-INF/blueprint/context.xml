<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    >

  <reference id="entityManagerFactory" interface="javax.persistence.EntityManagerFactory"
             filter="(osgi.unit.name=peerManagerUnit)" />

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/peer_manager" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>
  <service ref="peerManager" interface="org.safehaus.subutai.core.peer.api.PeerManager" />

  <reference id="messenger" availability="mandatory"
             interface="org.safehaus.subutai.core.messenger.api.Messenger" />

  <reference id="commandExecutor" interface="org.safehaus.subutai.core.executor.api.CommandExecutor" />

  <reference id="templateRegistry" interface="org.safehaus.subutai.core.registry.api.TemplateRegistry" />

  <reference id="hostRegistry" interface="org.safehaus.subutai.core.hostregistry.api.HostRegistry" />

  <reference id="strategyManager" interface="org.safehaus.subutai.core.strategy.api.StrategyManager" />

  <reference id="quotaManager" availability="mandatory"
             interface="org.safehaus.subutai.core.lxc.quota.api.QuotaManager" />
  <reference id="monitor" availability="optional"
             interface="org.safehaus.subutai.core.metric.api.Monitor" />

  <bean id="peerManager" init-method="init" destroy-method="destroy" scope="singleton"
        class="org.safehaus.subutai.core.peer.impl.PeerManagerImpl">
    <property name="templateRegistry" ref="templateRegistry" />
    <property name="hostRegistry" ref="hostRegistry" />
    <property name="strategyManager" ref="strategyManager" />
    <property name="quotaManager" ref="quotaManager" />
    <property name="monitor" ref="monitor" />
    <property name="commandExecutor" ref="commandExecutor" />
    <property name="entityManagerFactory" ref="entityManagerFactory" />
    <argument ref="dataSource" />
    <argument ref="messenger" />
  </bean>

</blueprint>
