<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusMessenger">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <reference id="messageProcessor" availability="mandatory"
             interface="org.safehaus.subutai.core.messenger.api.MessageProcessor" />

  <bean id="messengerRestImpl" class="org.safehaus.subutai.core.messenger.rest.RestServiceImpl">
    <argument ref="messageProcessor" />
  </bean>

  <jaxrs:server address="/messenger" id="messengerRestService">
    <jaxrs:serviceBeans>
      <ref component-id="messengerRestImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

</blueprint>
