<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <service ref="module" interface="org.safehaus.subutai.server.ui.api.PortalModule"/>

    <reference id="accumuloManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.accumulo.api.Accumulo"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agent.api.AgentManager"/>
    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.subutai.core.tracker.api.Tracker"/>
    <reference id="hadoopManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop"/>
    <reference id="zookeeperManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.zookeeper.api.Zookeeper"/>
    <reference id="commandRunner" availability="mandatory"
               interface="org.safehaus.subutai.core.command.api.CommandRunner"/>

    <bean id="module" scope="singleton" class="org.safehaus.subutai.plugin.accumulo.ui.AccumuloUI"
          init-method="init" destroy-method="destroy">
        <argument ref="agentManager"/>
        <argument ref="tracker"/>
        <argument ref="accumuloManager"/>
        <argument ref="hadoopManager"/>
        <argument ref="zookeeperManager"/>
        <argument ref="commandRunner"/>
    </bean>

</blueprint>
