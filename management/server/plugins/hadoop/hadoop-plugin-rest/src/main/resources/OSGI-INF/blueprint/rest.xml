<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">
    <cxf:bus id="cxfBus1">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
    <jaxrs:server address="/hadoop" id="hadoopRestService">
        <jaxrs:serviceBeans>
            <ref component-id="hadoopRestServiceImpl"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>
    <bean id="hadoopRestServiceImpl" class="org.safehaus.subutai.hadoop.services.RestServiceImpl">
        <property name="hadoopManager" ref="hadoopManager"/>
    </bean>
    <reference id="hadoopManager" availability="mandatory"
               interface="org.safehaus.subutai.hadoop.api.Hadoop"/>
</blueprint>
