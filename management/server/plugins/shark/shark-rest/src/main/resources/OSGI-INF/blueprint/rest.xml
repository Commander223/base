<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">
    <cxf:bus id="cxfBusShark">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
    <reference id="sparkManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.spark.api.Spark"/>
    <reference id="sharkManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.shark.api.Shark"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agent.api.AgentManager"/>

    <bean id="sharkRestService" class="org.safehaus.subutai.plugin.shark.rest.RestService">
        <property name="agentManager" ref="agentManager"/>
        <property name="sharkManager" ref="sharkManager"/>
        <property name="sparkManager" ref="sparkManager"/>
    </bean>

    <jaxrs:server address="/shark" id="sharkRestServiceImpl">
        <jaxrs:serviceBeans>
            <ref component-id="sharkRestService"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>
</blueprint>
