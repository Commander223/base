<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd">

  <cxf:bus id="cxfBusJetty">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>

  <jaxrs:server address="/jetty" id="jettyRestService">
    <jaxrs:serviceBeans>
      <ref component-id="jettyRestServiceImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>

  <bean id="jettyRestServiceImpl" class="org.safehaus.subutai.plugin.jetty.rest.RestServiceImpl">
    <property name="jettyManager" ref="jettyManager" />
  </bean>

  <reference id="jettyManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.jetty.api.Jetty" />
</blueprint>