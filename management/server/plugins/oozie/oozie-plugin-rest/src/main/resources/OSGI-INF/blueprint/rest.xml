<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd

  http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs.xsd
  http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">
  <cxf:bus id="cxfBus1Oozie">
    <cxf:features>
      <cxf:logging />
    </cxf:features>
  </cxf:bus>
  <jaxrs:server address="/oozie-plugin" id="oozieRestService">
    <jaxrs:serviceBeans>
      <ref component-id="oozieRestServiceImpl" />
    </jaxrs:serviceBeans>
  </jaxrs:server>
  <bean id="oozieRestServiceImpl" class="org.safehaus.plugin.oozie.rest.RestServiceImpl">
    <property name="oozieManager" ref="oozieManager" />
    <property name="hadoopManager" ref="hadoopManager" />
  </bean>
  <reference id="oozieManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.oozie.api.Oozie" />
  <reference id="hadoopManager" availability="mandatory"
             interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />
</blueprint>