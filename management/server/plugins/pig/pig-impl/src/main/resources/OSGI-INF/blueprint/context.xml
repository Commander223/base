<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="commandRunner" availability="mandatory"
               interface="org.safehaus.subutai.core.command.api.CommandRunner"/>

    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agent.api.AgentManager"/>

    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.subutai.core.tracker.api.Tracker"/>

    <reference id="dbManager" availability="mandatory"
               interface="org.safehaus.subutai.core.db.api.DbManager"/>

    <reference id="environmentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.environment.api.EnvironmentManager"/>

    <reference id="containerManager" availability="mandatory"
               interface="org.safehaus.subutai.core.container.api.container.ContainerManager"/>

    <reference id="hadoopManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.hadoop.api.Hadoop" />

    <bean id="pig-impl" scope="singleton" class="org.safehaus.subutai.plugin.pig.impl.PigImpl"
          init-method="init" destroy-method="destroy">
        <argument ref="commandRunner"/>
        <argument ref="agentManager"/>
        <argument ref="dbManager"/>
        <argument ref="tracker"/>

        <property name="environmentManager" ref="environmentManager"/>
        <property name="containerManager" ref="containerManager"/>
        <property name="hadoopManager" ref="hadoopManager"/>
    </bean>

    <service ref="pig-impl" interface="org.safehaus.subutai.plugin.pig.api.Pig"/>

</blueprint>
