<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="commandRunner" availability="mandatory"
               interface="org.safehaus.subutai.core.command.api.CommandRunner"/>
    <reference id="agentManager" availability="mandatory"
               interface="org.safehaus.subutai.core.agent.api.AgentManager"/>
    <reference id="tracker" availability="mandatory"
               interface="org.safehaus.subutai.core.tracker.api.Tracker"/>
    <reference id="dbManager" availability="mandatory"
               interface="org.safehaus.subutai.core.db.api.DbManager"/>
    <reference id="zookeeperManager" availability="mandatory"
               interface="org.safehaus.subutai.plugin.zookeeper.api.Zookeeper"/>
    <reference id="lxcManager" availability="mandatory"
               interface="org.safehaus.subutai.core.container.api.lxcmanager.LxcManager"/>

    <bean id="storm-impl" scope="singleton" class="org.safehaus.subutai.plugin.storm.impl.StormImpl"
          init-method="init" destroy-method="destroy">
        <property name="commandRunner" ref="commandRunner"/>
        <property name="agentManager" ref="agentManager"/>
        <property name="tracker" ref="tracker"/>
        <property name="dbManager" ref="dbManager"/>
        <property name="zookeeperManager" ref="zookeeperManager"/>
        <property name="lxcManager" ref="lxcManager"/>
    </bean>

    <service ref="storm-impl" interface="org.safehaus.subutai.plugin.storm.api.Storm"/>

</blueprint>
