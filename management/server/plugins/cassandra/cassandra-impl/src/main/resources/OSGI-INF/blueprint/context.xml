<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:~/cassandra_plugin_data" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <reference id="containerManager" availability="mandatory"
             interface="org.safehaus.subutai.core.container.api.container.ContainerManager" />
  <reference id="environmentManager" availability="mandatory"
             interface="org.safehaus.subutai.core.environment.api.EnvironmentManager" />

  <bean id="cassandra-impl" scope="singleton" class="org.safehaus.subutai.plugin.cassandra.impl.CassandraImpl"
        init-method="init" destroy-method="destroy">
    <property name="containerManager" ref="containerManager" />
    <property name="environmentManager" ref="environmentManager" />
    <argument ref="dataSource" />
  </bean>

  <service ref="cassandra-impl" interface="org.safehaus.subutai.plugin.cassandra.api.Cassandra" />

</blueprint>
