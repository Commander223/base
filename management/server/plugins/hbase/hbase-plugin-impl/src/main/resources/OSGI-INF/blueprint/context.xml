<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="agentManager" availability="mandatory"
             interface="org.safehaus.subutai.api.agentmanager.AgentManager" />
  <reference id="hadoopManager" availability="mandatory"
             interface="org.safehaus.subutai.api.hadoop.Hadoop" />
  <reference id="tracker" availability="mandatory"
             interface="org.safehaus.subutai.api.tracker.Tracker" />
  <reference id="dbManager" availability="mandatory"
             interface="org.safehaus.subutai.api.dbmanager.DbManager" />
  <reference id="commandRunner" availability="mandatory"
             interface="org.safehaus.subutai.api.commandrunner.CommandRunner" />
  <reference id="containerManager" availability="mandatory"
             interface="org.safehaus.subutai.api.container.ContainerManager" />
  <reference id="environmentManager" availability="mandatory"
             interface="org.safehaus.subutai.api.manager.EnvironmentManager" />

  <bean id="hbase-impl" scope="singleton" class="org.safehaus.subutai.plugin.hbase.impl.HBaseImpl"
        init-method="init" destroy-method="destroy">
    <argument ref="agentManager" />
    <argument ref="hadoopManager" />
    <argument ref="dbManager" />
    <argument ref="tracker" />
    <argument ref="commandRunner" />
    <argument ref="containerManager" />
    <argument ref="environmentManager" />
  </bean>

  <service ref="hbase-impl" interface="org.safehaus.subutai.plugin.hbase.api.HBase" />

</blueprint>
