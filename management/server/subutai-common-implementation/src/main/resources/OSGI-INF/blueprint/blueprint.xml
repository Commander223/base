<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"
    >

  <!--TemplateService-->
  <!-- ******************************************************************************** -->
  <bean id="daoManagerCommonImpl" init-method="init" class="io.subutai.common.dao.DaoManager" scope="prototype">
    <jpa:unit unitname="commonServicePUnit" property="entityManagerFactory" />
  </bean>
  <!-- ******************************************************************************** -->


  <bean id="templateServiceImpl" class="io.subutai.common.protocol.impl.TemplateServiceImpl">
    <property name="daoManager" ref="daoManagerCommonImpl" />
  </bean>

  <service ref="templateServiceImpl"  interface="io.subutai.common.protocol.api.TemplateService" />

</blueprint>