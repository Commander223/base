<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"

           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
    >

  <!-- *********************Security Manager ************************ -->

  <bean id="securityManagerJDBC" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/var/lib/subutai/db/securityDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="securityManagerJDBC">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/securityManagerDS" />
    </service-properties>
  </service>

