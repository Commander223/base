<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"

           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
    >

  <bean id="envManagerJDBC" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/root/db/environmentDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="envManagerJDBC">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/envManagerDS" />
    </service-properties>
  </service>

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/root/db/commonDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="dataSource">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/commonService" />
    </service-properties>
  </service>

  <bean id="peerManagerJDBC" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/root/db/peerManagerDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="peerManagerJDBC">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/peerManagerDS" />
    </service-properties>
  </service>

  <bean id="messengerJDBC" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/root/db/messengerDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="messengerJDBC">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/messengerDS" />
    </service-properties>
  </service>

  <bean id="trackerJDBC" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/root/db/trackerDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="trackerJDBC">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/trackerDS" />
    </service-properties>
  </service>

  <!--Plugins DataSource-->
  <bean id="pluginsJDBC" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:/var/lib/subutai/db/plugins/pluginsDb" />
    <property name="user" value="sa" />
    <property name="password" value="" />
  </bean>

  <service interface="javax.sql.DataSource" ref="pluginsJDBC">
    <service-properties>
      <entry key="osgi.jndi.service.name" value="openjpa/pluginsDS" />
    </service-properties>
  </service>

</blueprint>