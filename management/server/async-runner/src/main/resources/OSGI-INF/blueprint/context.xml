<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

    <service ref="module" interface="org.safehaus.kiskis.mgmt.server.ui.services.Module"/>
    <service ref="module" interface="org.safehaus.kiskis.mgmt.shared.protocol.api.AsyncTaskRunner"/>
    
    <reference id="commandManager" availability="mandatory"
               interface="org.safehaus.kiskis.mgmt.shared.protocol.api.CommandManager"/>
        
    <bean id="module" scope="singleton"
          class="org.safehaus.kiskis.mgmt.async.runner.AsyncTaskRunnerImpl"
          init-method="init" destroy-method="destroy" activation="eager">
        <property name="commandManager" ref="commandManager"/>
    </bean>

</blueprint>