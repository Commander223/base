#!/bin/bash



function quota_usage {
  echo -----------------------------------------------------------------------
  echo Usage: List containers and/or temlates.
  echo
  echo "        "subutai \[-qh\] quota \[name_list\] \[quota_type\] \[quota_value\]
  echo
  echo -----------------------------------------------------------------------
}

function quota {
  OPTIND=0
  if [ "$1" == "quota" ]; then
    shift
  fi

  local container=$1
  local resource_parameter=$2
  local parameter_value=$3

  if [[ -z $container ]]; then
    echo "Dancing with container with no name. Aborting...";
    exit 1;
  fi

  if [[ -z $resource_parameter ]]; then
    echo "Resource parameter not provided. Aborting..."
    exit 1;
  fi

  if [ -z $parameter_value ]; then
    case $resource_parameter in
      "memory.quota" ) 
        lxc_get_memory $container 
      ;;
      "cpu.cpus")
        lxc_get_cpus $container
      ;;
      "hdd.quota.home")
        zfs_get_quota $container "home"
      ;;
      "hdd.quota.var")
        zfs_get_quota $container "var"
      ;;
      "hdd.quota.opt")
        zfs_get_quota $container "opt"
      ;;
      "hdd.quota.rootfs")
        zfs_get_quota $container "rootfs"
      ;;
      "json")
        local memory_value=$(lxc_get_memory $container)
        local memory_value=$( [ -z $memory_value ] &&  echo "none" || echo $memory_value )

        local cpu_value=$(lxc_get_cpus $container)
        local cpu_value=$( [ -z $cpu_value ] && echo "none" || printf "\"$cpu_value\"" )

        local hdd_home_value=$(zfs_get_quota $container "home")
        local hdd_var_value=$(zfs_get_quota $container "var")
        local hdd_opt_value=$(zfs_get_quota $container "opt")
        local hdd_rootfs_value=$(zfs_get_quota $container "rootfs")
        printf "{memory.quota=$memory_value,cpu.cpus=$cpu_value,hdd.quota.home=$hdd_home_value, hdd.quota.var=$hdd_var_value, hdd.quota.opt=$hdd_opt_value, hdd.quota.rootfs=$hdd_rootfs_value}"
      ;;
    esac
  else
    case $resource_parameter in
      "memory.quota" )
        lxc_set_memory $container $parameter_value
        ;;
      "cpu.cpus" )
        lxc_set_cpus $container $parameter_value
      ;;
      "hdd.quota.home")
        zfs_set_quota $container "home" $parameter_value
      ;;
      "hdd.quota.var")
        zfs_set_quota $container "var" $parameter_value
      ;;
      "hdd.quota.opt")
        zfs_set_quota $container "opt" $parameter_value
      ;;
      "hdd.quota.rootfs")
        zfs_set_quota $container "rootfs" $parameter_value
      ;;
    esac
  fi

}


function quota_description {

  echo sets and gets container quotas;
}