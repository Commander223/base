#!/bin/bash
set -e

FilePath="/etc/profile"
activemqHomeEcho="/opt/apache-activemq-5.9.1"
activemqConf=$activemqHomeEcho"/conf"

sudo update-rc.d activemq defaults

if grep -q "export ACTIVEMQ_HOME=" $FilePath
then
        echo "activemq home is already added!"
else
        echo "activemq home is being inserted"
        echo "export ACTIVEMQ_HOME="$activemqHomeEcho >> $FilePath
fi
. $FilePath
