#!/bin/bash

# Exit on error
set -e

hiveBin="/usr/local/bin"
# Remove any symlinks that are broken under hive bin directory
find -L $hadoopBin -maxdepth 1 -type l -delete

if [ "x$HIVE_HOME" = "x" ];
then
	HIVE_HOME=/opt/hive
fi

if [ -d "$HIVE_HOME" ]; then
	rm -r $HIVE_HOME
fi

if [ -f "/etc/init.d/hive" ]; then
        rm  /etc/init.d/hive
fi
if [ -f "/etc/init.d/hive-thrift" ]; then
        rm  /etc/init.d/hive-thrift
fi
if [ -d "/etc/hive" ]; then
        rm -r /etc/hive
fi
